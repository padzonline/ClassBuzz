<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlayout" tools:context=".MainActivity"
    android:background="@drawable/menubg">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/iview"
        android:background="#00ffffff"
        android:src="@drawable/circle3"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/iview2"
        android:background="#00ffffff"
        android:src="@drawable/circle"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/iview3"
        android:background="#00ffffff"
        android:src="@drawable/circle"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/iview4"
        android:background="#00ffffff"
        android:src="@drawable/circle3"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iview5"
        android:background="#00ffffff"
        android:src="@drawable/circle2"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iview6"
        android:background="#00ffffff"
        android:src="@drawable/circle"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iview7"
        android:background="#00ffffff"
        android:src="@drawable/circle2"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/iview8"
        android:background="#00ffffff"
        android:src="@drawable/circle2"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iview9"
        android:background="#00ffffff"
        android:src="@drawable/circle"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/iview10"
        android:background="#00ffffff"
        android:src="@drawable/circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menulayout"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp">



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Sessions"
            android:textColor="#00cc91"
            android:background="@drawable/menubtn"
            android:id="@+id/button"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="#00cc91"
            android:background="@drawable/menubtn"
            android:id="@+id/button2"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00cc91"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn"
            android:text="View results for ST900-01a"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00cc91"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn"
            android:text="Logout"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:src="@drawable/topbarwpanel"
        android:layout_alignParentStart="false"
        android:cropToPadding="false"
        android:paddingTop="0dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/menuLogo"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logocorner"
        android:layout_alignParentStart="false"
        android:layout_gravity="left"
        android:cropToPadding="false"
        android:layout_margin="0dp"
        android:paddingTop="0dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAIN MENU"
        android:id="@+id/menu_title"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:textStyle="normal"
        android:textSize="@dimen/large_text_size"
        android:textScaleX="1.1"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sessionsScrollView"
        android:layout_below="@+id/menu_title"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="40dp"
        android:fadingEdge="vertical"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="15dp"
        android:padding="0dp"
        android:scrollbars="none">

    <LinearLayout
        android:id="@+id/sessions_layout"
        android:orientation="vertical"
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:text=" "
            android:id="@+id/sessionbutton1"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton2"
            android:layout_below="@+id/sessionbutton1"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton3"
            android:layout_below="@+id/sessionbutton2"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton4"
            android:layout_below="@+id/sessionbutton3"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton5"
            android:layout_below="@+id/sessionbutton4"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton6"
            android:layout_below="@+id/sessionbutton5"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton7"
            android:layout_below="@+id/sessionbutton6"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton8"
            android:layout_below="@+id/sessionbutton7"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton9"
            android:layout_below="@+id/sessionbutton8"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff2353"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/menubtn_red"
            android:id="@+id/sessionbutton10"
            android:layout_below="@+id/sessionbutton9"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text_size" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="user"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/usernameb"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:visibility="invisible"
        android:textSize="@dimen/small_text_size"
        android:layout_centerVertical="true"
        android:background="@drawable/helpbackground"
        android:textColor="#ffffff"
        android:text="@string/info_box"
        android:id="@+id/infoBox" />

</RelativeLayout>