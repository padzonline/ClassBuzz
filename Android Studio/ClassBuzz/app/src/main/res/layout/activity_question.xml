<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.padzonline.classbuzz.QuestionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/questionLLayout"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:weightSum="100"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/questionbg">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:textSize="@dimen/medium_text_size"
            android:text="Title Text"
            android:id="@+id/textView4"
            android:textColor="#222266"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/vertical_space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:textColor="#666688"
        android:textSize="@dimen/small_text_size"
        android:text=" "
        android:id="@+id/textView3"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        android:adjustViewBounds="true"
        android:id="@+id/imageView2"
        android:scaleType="fitXY"
        android:padding="@dimen/vertical_space"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="32"
        android:weightSum="32"
        android:gravity="left"
        android:textColor="#666688"
        android:layout_below="@+id/imageView2"
        android:textSize="@dimen/small_text_size"
        android:orientation="vertical"
        android:id="@+id/radioGroup">

        <RadioButton android:id="@+id/a1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:textColor="#666688"
            android:textSize="@dimen/small_text_size"
            android:text="One"/>
        <RadioButton android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:textColor="#666688"
            android:textSize="@dimen/small_text_size"
            android:text="Two"/>
        <RadioButton android:id="@+id/a3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:textColor="#666688"
            android:textSize="@dimen/small_text_size"
            android:text="Three"/>
        <RadioButton android:id="@+id/a4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:textColor="#666688"
            android:textSize="@dimen/small_text_size"
            android:text="Four"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:textColor="#00cc91"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text_size"
        android:id="@+id/submitbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menubtn"
        android:padding="@dimen/button_padding"/>

</LinearLayout>




</RelativeLayout>